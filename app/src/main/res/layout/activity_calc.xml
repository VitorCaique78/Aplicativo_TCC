<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_dark"
    tools:context=".Calc">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/background_light"
        android:gravity="bottom|right"
        android:textSize="28pt"
        tools:text="0" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/textView">

        <Button
            android:id="@+id/butlimpa"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/but0"
            android:background="#808080"
            android:text="C" />

        <Button
            android:id="@+id/butneg"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_below="@+id/but0"
            android:layout_toEndOf="@+id/but0"
            android:background="#808080"
            android:text="+/-" />

        <Button
            android:id="@+id/butporc"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_below="@+id/but0"
            android:layout_toEndOf="@+id/but2"
            android:background="#808080"
            android:text="%" />

        <Button
            android:id="@+id/butpare"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_below="@+id/but0"
            android:layout_toEndOf="@+id/but3"
            android:background="#808080"
            android:text="( )" />

        <Button
            android:id="@+id/but0"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/but1"
            android:background="#808080"
            android:text="0"
            android:onClick="speakNow"
            />

        <Button
            android:id="@+id/but1"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/but4"
            android:background="#808080"
            android:text="1" />

        <Button
            android:id="@+id/but2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/but4"
            android:layout_toStartOf="@+id/but9"
            android:background="#808080"
            android:text="2" />

        <Button
            android:id="@+id/but3"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/but9"
            android:layout_below="@+id/but4"
            android:background="#808080"
            android:text="3" />

        <Button
            android:id="@+id/but4"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/but9"
            android:background="#808080"
            android:text="4" />

        <Button
            android:id="@+id/but5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/but9"
            android:layout_toStartOf="@+id/but9"
            android:background="#808080"
            android:text="5" />

        <Button
            android:id="@+id/but6"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/but9"
            android:layout_below="@+id/but9"
            android:background="#808080"
            android:text="6" />

        <Button
            android:id="@+id/but7"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:background="#808080"
            android:text="7" />

        <Button
            android:id="@+id/but8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/but7"
            android:background="#808080"
            android:text="8" />

        <Button
            android:id="@+id/but9"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/but8"
            android:background="#808080"
            android:text="9" />

        <Button
            android:id="@+id/butponto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/but1"
            android:layout_toStartOf="@+id/but9"
            android:background="#808080"
            android:text="." />

        <Button
            android:id="@+id/butigual"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/but9"
            android:layout_below="@+id/but1"
            android:background="#808080"
            android:text="=" />

        <Button
            android:id="@+id/butdiv"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_below="@+id/but1"
            android:layout_toEndOf="@+id/but9"
            android:background="#808080"
            android:text="/" />

        <Button
            android:id="@+id/butmult"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_below="@+id/but4"
            android:layout_toEndOf="@+id/but9"
            android:background="#808080"
            android:text="x" />

        <Button
            android:id="@+id/butmen"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_below="@+id/but9"
            android:layout_toEndOf="@+id/but9"
            android:background="#808080"
            android:text="-" />

        <Button
            android:id="@+id/butmais"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/but9"
            android:background="#808080"
            android:text="+" />

    </RelativeLayout>

</RelativeLayout>